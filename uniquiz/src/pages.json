{
    "easycom": {
        "autoscan": true,
        "custom": {
            // uni-ui 规则如下配置
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
        }
    },
    "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/user/login",
            "style": {
                "navigationBarTitleText": "登录"
            }
        },
        {
            "path": "pages/index/home",
            "style": {
                "navigationBarTitleText": "主页"
            }
        },
        {
            "path": "pages/user/register",
            "style": {
                "navigationBarTitleText": "注册"
            }
        },
        {
            "path": "pages/user/usr-msg",
            "style": {
                "navigationBarTitleText": "用户信息"
            }
        },
        {
            "path": "pages/user/logoff",
            "style": {
                "navigationBarTitleText": "注销用户"
            }
        },
        {
            "path": "pages/user/upd-pass",
            "style": {
                "navigationBarTitleText": "修改密码"
            }
        },
        {
            "path": "pages/quiz/random-qn",
            "style": {
                "navigationBarTitleText": "随机题目"
            }
        },
        {
            "path": "pages/quiz/ans-qn",
            "style": {
                "navigationBarTitleText": "答题"
            }
        },
        {
            "path": "pages/tea/tea-home",
            "style": {
                "navigationBarTitleText": "主页",
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/tea/tea-home2",
            "style": {
                "navigationBarTitleText": "主页",
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/tea/tea-bank",
            "style": {
                "navigationBarTitleText": "题库",
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/tea/tea-paper",
            "style": {
                "navigationBarTitleText": "试卷",
                "enablePullDownRefresh": true
            }
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    }
}